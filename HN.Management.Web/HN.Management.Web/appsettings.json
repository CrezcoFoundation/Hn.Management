{
  "AppSettings": {
    "Secret": "JWT TOKENS, IT CAN BE ANY STRING",
    "ExpireTime": "0.5",
    "ValidIssuer": "http://localhost:44395",
    "ValidAudience": "http://localhost:44395"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DeveloperDatabase": "data source=DESKTOP-Q6K31KP; initial catalog=HnManagementBd;integrated security=true"
  },
  //"JWT": {
  //  "ClaveSecreta": "OLAh6Yh5KwNFvOqgltw7",
  //  "ValidIssuer": "https://localhost:44395/",
  //  "ValidAudience": "https://localhost:44395/"
  //},
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },

    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\log.txt",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\structuredLog.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "ConnectionStrings": {
            "DeveloperDatabase": "data source=DESKTOP-Q6K31KP; initial catalog=HnManagementBd;integrated security=true"
          },
          "sinkOptionsSection": {
            "tableName": "Logs",
            "schemaName": "EventLogging",
            "autoCreateSqlTable": true
          },
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Serilog.WebApplication"
    }
  }
}